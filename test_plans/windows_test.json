{
    "name": "Windows Test Plan",
    "description": "Test plan for Windows file system validation",
    "version": "1.0.0",
    "author": "Test Automation Team",
    "created_date": "2025-01-21",
    "test_cases": [
        {
            "id": 1,
            "name": "Windows File System Validation",
            "description": "Validate Windows system files and directories",
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "C:\\Windows\\System32\\drivers\\etc\\hosts"
                    }
                },
                {
                    "step_number": 2,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "C:\\Windows\\System32\\cmd.exe"
                    }
                },
                {
                    "step_number": 3,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "C:\\Windows\\explorer.exe"
                    }
                },
                {
                    "step_number": 4,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "C:\\Program Files"
                    }
                },
                {
                    "step_number": 5,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "C:\\Users"
                    }
                },
                {
                    "step_number": 6,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "C:\\Windows\\System32\\notepad.exe"
                    }
                }
            ]
        },
        {
            "id": 2,
            "name": "Temporary File Operations Test",
            "description": "Test file creation and operations using temporary directory capabilities.",
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "files/create_file.py",
                    "test_function": "create_file",
                    "parameters": {
                        "file_path": "<tmp>/test_file_1.txt",
                        "content": "This is a test file created in temporary directory",
                        "ensure_parent_dirs": true
                    }
                },
                {
                    "step_number": 2,
                    "test_script": "files/create_file.py",
                    "test_function": "create_file",
                    "parameters": {
                        "file_path": "<tmp>/secure_file.txt",
                        "content": "Secure file with specific permissions",
                        "permissions": 600
                    }
                },
                {
                    "step_number": 3,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "<tmp>/test_file_1.txt"
                    }
                },
                {
                    "step_number": 4,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "<tmp>/secure_file.txt",
                        "expected_permission": 600
                    }
                }
            ]
        },
        {
            "id": 3,
            "name": "HTTP Basic Authentication Test",
            "description": "Test HTTP basic authentication with httpbin.org service using secure credential storage",
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "http/http_request.py",
                    "test_function": "make_http_request",
                    "authentication": {
                        "authentication_type": "basic",
                        "authentication_name": "httpbin_basic_auth"
                    },
                    "parameters": {
                        "url": "https://httpbin.org/basic-auth/user/password",
                        "method": "GET",
                        "expected_status": 200
                    }
                }
            ]
        },
        {
            "id": 4,
            "name": "Windows basic command execution Test",
            "description": "Test local command execution on Windows platform",
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "process/execute_command.py",
                    "test_function": "execute_command",
                    "parameters": {
                        "command": "powershell -Command \"Get-Date\""
                    }
                },
                {
                    "step_number": 2,
                    "test_script": "process/execute_command.py",
                    "test_function": "execute_command",
                    "parameters": {
                        "command": "powershell -Command \"Get-Process -Id 0\"",
                        "search_string": "Idle"
                    }
                },
                {
                    "step_number": 3,
                    "test_script": "process/execute_command.py",
                    "test_function": "execute_command",
                    "parameters": {
                        "command": "powershell -Command \"Get-Service -Name SysMain\"",
                        "search_string": "Running"
                    }
                },
                {
                    "step_number": 4,
                    "test_script": "process/execute_command.py",
                    "test_function": "execute_command",
                    "parameters": {
                        "command": "powershell -Command \"Get-ChildItem C:\\Windows\"",
                        "search_string": "System32"
                    }
                },
                {
                    "step_number": 5,
                    "test_script": "process/execute_command.py",
                    "test_function": "execute_command",
                    "parameters": {
                        "command": "powershell -Command \"Write-Output '$env:USERNAME'\""
                    }
                },
                {
                    "step_number": 6,
                    "test_script": "process/execute_command.py",
                    "test_function": "execute_command",
                    "parameters": {
                        "command": "powershell -Command \"Get-Location\"",
                        "run_location": "<tmp>",
                        "search_string": "<tmp>"
                    }
                },
                {
                    "step_number": 7,
                    "test_script": "process/execute_command.py",
                    "test_function": "execute_command",
                    "parameters": {
                        "command": "powershell -Command \"Test-Path C:\\Windows\"",
                        "search_string": "True"
                    }
                },
                {
                    "step_number": 8,
                    "test_script": "process/execute_command.py",
                    "test_function": "execute_command",
                    "parameters": {
                        "command": "powershell -Command \"[System.Environment]::OSVersion.VersionString\"",
                        "search_string": "Windows"
                    }
                },
                {
                    "step_number": 9,
                    "test_script": "process/execute_command.py",
                    "test_function": "execute_command",
                    "parameters": {
                        "command": "powershell -Command \"Get-Culture\"",
                        "search_string": "France"
                    }
                },
                {
                    "step_number": 10,
                    "test_script": "process/execute_command.py",
                    "test_function": "execute_command",
                    "parameters": {
                        "command": "powershell -Command \"Write-Output 'PowerShell Test OK'\"",
                        "search_string": "PowerShell Test OK"
                    }
                }
            ]
        },
        {
            "id": 5,
            "name": "Git Repository Operations Test",
            "description": "Test Git repository operations including clone, push, and delete operations with authentication",
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "git/git_operations.py",
                    "test_function": "git_clone",
                    "authentication": {
                        "authentication_type": "basic",
                        "authentication_name": "github_test_private_repo"
                    },
                    "parameters": {
                        "repo_url": "https://github.com/ThibaultLeveau/test_private_repo.git",
                        "target_dir": "<tmp>/test_private_repo",
                        "clear_git_configs": true
                    }
                },
                {
                    "step_number": 2,
                    "test_script": "files/create_file.py",
                    "test_function": "create_file",
                    "parameters": {
                        "file_path": "<tmp>/test_private_repo/test_file_for_git.txt",
                        "content": "This is a test file created for Git operations testing",
                        "ensure_parent_dirs": true
                    }
                },
                {
                    "step_number": 3,
                    "test_script": "git/git_operations.py",
                    "test_function": "git_push_file",
                    "authentication": {
                        "authentication_type": "basic",
                        "authentication_name": "github_test_private_repo"
                    },
                    "parameters": {
                        "repo_dir": "<tmp>/test_private_repo",
                        "file_path": "test_file_for_git.txt",
                        "commit_message": "Add test file for automation testing",
                        "clear_git_configs": true
                    }
                },
                {
                    "step_number": 4,
                    "test_script": "git/git_operations.py",
                    "test_function": "git_delete_file",
                    "authentication": {
                        "authentication_type": "basic",
                        "authentication_name": "github_test_private_repo"
                    },
                    "parameters": {
                        "repo_dir": "<tmp>/test_private_repo",
                        "file_path": "test_file_for_git.txt",
                        "commit_message": "Remove test file after automation testing",
                        "clear_git_configs": true
                    }
                }
            ]
        }
    ]
}
