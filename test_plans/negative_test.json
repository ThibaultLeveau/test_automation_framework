{
    "name": "Negative Test Examples",
    "description": "Demonstrates negative test functionality with inverted PASS/FAIL logic",
    "version": "1.0.0",
    "author": "Test Automation Team",
    "created_date": "2025-01-27",
    "test_cases": [
        {
            "id": 1,
            "name": "Normal File Validation",
            "description": "Standard positive test - should pass when files exist",
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "/etc/passwd"
                    }
                }
            ]
        },
        {
            "id": 2,
            "name": "Negative File Validation",
            "description": "Negative test - should pass when file doesn't exist",
            "negative_test": true,
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "/non/existent/file.txt"
                    }
                }
            ]
        },
        {
            "id": 3,
            "name": "Mixed Positive and Negative Tests",
            "description": "Combination of normal and negative test scenarios",
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "/etc/hosts"
                    }
                },
                {
                    "step_number": 2,
                    "test_script": "files/create_file.py",
                    "test_function": "create_file",
                    "parameters": {
                        "file_path": "<tmp>/test_file.txt",
                        "content": "Test content for negative test validation"
                    }
                }
            ]
        },
        {
            "id": 4,
            "name": "Negative Test with Multiple Steps",
            "description": "All steps in this test case should fail to pass",
            "negative_test": true,
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "/invalid/path/file1.txt",
                        "expected_permission": "644"
                    }
                },
                {
                    "step_number": 2,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "/another/invalid/file2.txt",
                        "expected_owner": "root"
                    }
                }
            ]
        }
    ]
}
