{
    "name": "Negative Test Demo",
    "description": "Simple demonstration of negative test functionality",
    "version": "1.0.0",
    "author": "Test Automation Team",
    "created_date": "2025-01-27",
    "test_cases": [
        {
            "id": 1,
            "name": "Positive Test - File Creation",
            "description": "This should pass normally",
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "files/create_file.py",
                    "test_function": "create_file",
                    "parameters": {
                        "file_path": "<tmp>/positive_test.txt",
                        "content": "This file should be created successfully"
                    }
                }
            ]
        },
        {
            "id": 2,
            "name": "Negative Test - File Check Should Fail",
            "description": "This should pass because we expect the file check to fail",
            "negative_test": true,
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "/this/file/definitely/does/not/exist.txt"
                    }
                }
            ]
        }
    ]
}
