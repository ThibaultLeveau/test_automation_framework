{
    "name": "Example Test Plan",
    "description": "Test plan for example test cases including file checks, HTTP requests, command execution, and Git operations.",
    "version": "1.0.0",
    "author": "Thibault L.",
    "created_date": "2025-10-28",
    "test_cases": [
        {
            "id": 1,
            "name": "Windows File System Validation",
            "description": "Validate Windows system files and directories",
            "steps": [
                {
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "C:\\Windows\\System32\\drivers\\etc\\hosts"
                    },
                    "step_number": 1
                }
            ]
        },
        {
            "id": 2,
            "name": "Temporary File Operations Test",
            "description": "Test file creation and operations using temporary directory capabilities.",
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "files/create_file.py",
                    "test_function": "create_file",
                    "parameters": {
                        "file_path": "<tmp>/test_file_1.txt",
                        "content": "This is a test file created in temporary directory",
                        "ensure_parent_dirs": true
                    }
                },
                {
                    "step_number": 2,
                    "test_script": "files/check_files.py",
                    "test_function": "check_file",
                    "parameters": {
                        "file_path": "<tmp>/test_file_1.txt"
                    }
                }
            ]
        },
        {
            "id": 4,
            "name": "Windows basic command execution Test",
            "description": "Test local command execution on Windows platform",
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "process/execute_command.py",
                    "test_function": "execute_command",
                    "parameters": {
                        "command": "powershell -Command \"Get-Date\""
                    }
                }
            ]
        },
        {
            "id": 5,
            "name": "Git Repository Operations Test",
            "description": "Test Git repository operations including connectivity validation, clone, push, and delete operations with authentication",
            "steps": [
                {
                    "step_number": 1,
                    "test_script": "git/git_operations.py",
                    "test_function": "git_validate_connectivity",
                    "authentication": {
                        "authentication_type": "basic",
                        "authentication_name": "github_test_private_repo"
                    },
                    "parameters": {
                        "repo_url": "https://github.com/ThibaultLeveau/test_private_repo.git",
                        "clear_git_configs": true
                    }
                }
            ]
        }
    ]
}